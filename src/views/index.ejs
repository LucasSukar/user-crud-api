<%- include('includes/head') %>
<%- include('includes/nav') %>

<% if(user) { %>
    <div class="container">
        <div class="row">
            <div class="col-12 my-3">
                <h1 class="text-center">Contact List</h1>
                <p class="text-center lead">Hello, <%= user.email %></p>
                
                <%- include('includes/messages') %>
                
                <div class="text-center mb-4">
                    <a href="/contacts" class="btn btn-success">New Contact</a>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover table-sm my-3 align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(contacts.length > 0) { %>
                                <% contacts.forEach(contact => { %>
                                    <tr>
                                        <td><%= contact.name %></td>
                                        <td><%= contact.surname %></td>
                                        <td><%= contact.email %></td>
                                        <td><%= contact.number %></td>
                                        <td class="text-center">
                                            <a href="/Contacts/index/<%= contact._id %>" class="btn btn-sm btn-outline-primary mx-1">
                                                Edit
                                            </a>
                                            <a href="/Contacts/delet/<%= contact._id %>" class="btn btn-sm btn-outline-danger mx-1">
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        No contacts found.
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            
            </div>
    </div>
<% } else { %>
    <div class="container">
        <div class="row justify-content-center my-5">
            <div class="col-lg-6 text-center">
                <h1 class="mb-4">Welcome</h1>
                <p class="lead">Please log in to your account to view your contacts.</p>
                <%- include('includes/messages') %>
            </div>
        </div>
    </div>
<% } %>

<%- include('includes/footer') %>