<%- include('includes/head') %>
<%- include('includes/nav') %>
<% if(user) { %>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            
            <div class="col-lg-8 my-3"></div>
            <h1 class="text-center"> Hello! <%= user.email %></h1>   
            <p class="text-center lead">contacts</p>
            <%- include('includes/messages') %>
        </div>
        <div class="responsive-table">
            <table class="table my-3">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Email</th>
                        <th>Number</th>
                        <th>Actions</th>
                        <th></th>
                    </tr>
                </thead>
                <% if(contacts.length > 0){ %>
                <tbody>
                    <% contacts.forEach(contact => { %>
                        <tr>
                            <td><%= contact.name %></td>
                            <td><%= contact.surname %></td>
                            <td><%= contact.email %></td>
                            <td><%= contact.number %></td>
                            
                            <td>
                                <a class="text-primary" href="/Contacts/index/<%= contact._id %>">Edit</a>
                            </td>
                            <td>
                                <a class="text-danger" href="/Contacts/delet/<%= contact._id %>">delet</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <% }else{ %>
                <p class="text-center lead">no contacts found</p>
            <%}%>
        </div>
        <div class="col-lg-2"></div>
    </div>
<% } else { %>
    <div class="container">
        <%- include('includes/messages') %>
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 my-3"></div>
            <h1 class="text-center"> Log in to your account to view your contacts.</h1>   
        </div>
<% }  %>
<%- include('includes/footer') %>
   