<% if (errors.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <% errors.forEach(erro => { %>
        <% if (erro && erro.length > 0) { %>
          <div class="alert alert-danger">
            <%= erro %>
          </div>
        <% } %>
      <% }); %>
    </div>
  </div>
<% } %>

<% if (success.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <% success.forEach(msg => { %>
        <% if (msg && msg.length > 0) { %>
          <div class="alert alert-success">
            <%= msg %>
          </div>
        <% } %>
      <% }); %>
    </div>
  </div>
<% } %>