<%- include('includes/head') %>
<%- include('includes/nav') %>
<% if(user) { %>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            
            <div class="col-lg-8 my-3"></div>
            <h1 class="text-center"> Hello! <%= user.email %></h1>   
            <p class="text-center lead">Register contacts</p>
            <%- include('includes/messages') %>
        </div>
        <%if(contact._id){%>
        <form action="/Contacts/edit/<%=contact._id%>" method="POST">
        <%}else{%>
        <%}%>
        <form action="/Contacts/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input  value="<%=contact.name%>"  type="text" class="form-control" name="name">
            </div>
            
            <div class="mb-3">
                <label class="form-label">Surname</label>
                <input value="<%=contact.surname%>" type="text" class="form-control" name="surname">
            </div>
            
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input value="<%=contact.email%>" type="email" class="form-control" name="email">
            </div>
            
            <div class="mb-3">
                <label class="form-label">Number</label>
                <input value="<%=contact.number%>" type="tel" class="form-control" name="number">
            </div>
            
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
<% } else { %>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 my-3"></div>
            <h1 class="text-center"> Log in to your account to view your contacts.</h1>   
        </div>
<% }  %>
<%- include('includes/footer') %>
   